/* pages/index/index.wxss */

.banners{
  width: 100%;
  height: 300rpx;
}

.banners image{
  width: 100%;
  height: 100%;
}

/*五个图标导航区域*/
.navContainer{
  display: flex;
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  background-color: rgb(240,19,19);
  line-height: 100rpx;
  color: #fff;
  font-size: 50rpx;
  margin: 20rpx 0;
}

.navItem text:last-child{
  font-size: 26rpx;
}
